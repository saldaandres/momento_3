html
    head
        title Usuarios
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body.bg-dark.text-bg-dark
        div.container
            h2.mt-5 Usuarios
            if error
                p.text-danger #{message}
            else
                p.text-success #{message}

            form(action="/user", method="post")
                div.row
                    div.col
                        div.form-group
                            label(for='userName') Nombre Usuario
                            input.form-control(type='text' id='userName' placeholder='Nombre de Usuario' name='userName')
                    div.col
                        div.form-group
                            label(for='password') Password
                            input.form-control(type='text' id='password' placeholder='Password' name='password')
                .row
                    div.col
                        div.form-group
                            label(for='name') Nombre
                            input.form-control(type='text' id='name' placeholder='Nombre' name='name')

                .row
                    div.col
                        div.form-group
                            label(for='reserveWord') Palabra Secreta
                            input.form-control(type='text' id='reserveWord' placeholder='reserveWord' name='reserveWord')

                .row
                    .col
                        .form-group
                            input.form-check-input(type='checkbox' value='admin' id='role' name='role')
                            label(for='role') Eres Admin?

                br
                .row.justify-content-center
                    .col
                        button.btn.btn-success(type="submit") Crear Usuario
                    .col
                        button.btn.btn-outline-success(type='submit' formaction='/user/login' formmethod='post') Iniciar Sesion






