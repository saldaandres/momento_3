html
    head
        title Retornar
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body.bg-dark.text-bg-dark
        div.container
            h2.mt-5 Retornar
            if error
                p.text-danger #{message}
            else
                p.text-success #{message}

            form(action="/returnCar/consultar", method="post")
                div.row
                    div.col
                        div.form-group
                            label(for='rentNumber') # Renta
                            input.form-control(type='number' id='rentNumber' placeholder='Numero de Renta' name='rentNumber')
                br
                .row.justify-content-center
                    .col
                        button.btn.btn-success(type="submit") Consultar


            if rent
                table.table.table-dark.table-striped
                    thead
                        tr
                            th(scope='col') #
                            th(scope='col') Usuario
                            th(scope='col') Placa
                            th(scope='col') Inicio
                            th(scope='col') Fin
                            th(scope='col') Estado
                    tbody
                        tr
                            th #{rent.rentNumber}
                            td #{rent.userName}
                            td #{rent.plate.toUpperCase()}
                            td #{rent.rentDate.toLocaleDateString('es-CO')}
                            td #{rent.finalDate.toLocaleDateString('es-CO')}
                            td #{rent.currentStatus ? 'Abierta' : 'Cerrada'}

                a.link-warning.link-offset-2.link-underline-opacity-25.link-underline-opacity-0-hover(href=`/returnCar/devolver/${rent.rentNumber}`) Retornar Este Carro

