html
    head
        title Carros
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        //link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/css/bootstrap.min.css')
    body.bg-dark.text-bg-dark
        div.container
            h2.mt-5 Carros
            if error
                p.text-danger #{message}
            else
                p.text-success #{message}

            form(action="/car", method="post")
                div.row
                    div.col
                        div.form-group
                            label(for='plate') Placa
                            input.form-control(type='text' id='plate' placeholder='Placa' name='plate')
                    div.col
                        div.form-group
                            label(for='brand') Marca
                            input.form-control(type='text' id='brand' placeholder='Marca' name='brand')
                div.row
                    div.col
                        div.form-group
                            label(for='plate') Valor Diario
                            input.form-control(type='number' id='dailyValue' placeholder='Valor por d√≠a' name='dailyValue')

                br
                .row.justify-content-center
                    .col
                        button.btn.btn-success(type="submit") Guardar

            form(action="/car/listar" method="get")
                .row
                    .col
                        button.btn.btn-outline-success(type='submit') Mostrar Lista

            if mostrarLista
                table.table.table-dark.table-striped
                    thead
                        tr
                            th Placa
                            th Marca
                            th Estado
                            th Valor Diario
                    tbody
                        for car in cars
                            tr
                                th #{car.plate.toUpperCase()}
                                td #{car.brand.toUpperCase()}
                                td #{car.available ? 'Disponible' : 'Rentado'}
                                td #{car.dailyValue}

